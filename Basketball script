-- Main Hub
local m=Instance.new("ScreenGui");m.Name="BLH";m.Parent=game.CoreGui;m.ZIndexBehavior=Enum.ZIndexBehavior.Sibling
local n=Instance.new("Frame",m);n.BackgroundColor3=Color3.fromRGB(25,25,35);n.BorderSizePixel=0;n.Position=UDim2.new(0.5,-225,0.5,-200);n.Size=UDim2.new(0,450,0,400);n.ClipsDescendants=true;n.Active=true;n.Draggable=true
Instance.new("UICorner",n).CornerRadius=UDim.new(0,12)
local o=Instance.new("UIStroke",n);o.Color=Color3.fromRGB(100,50,255);o.Thickness=2;o.Transparency=0.5

-- Title
local title=Instance.new("TextLabel",n)
title.Size=UDim2.new(1,0,0,50)
title.BackgroundTransparency=1
title.Text="üèÄ Basketball Legends Hub"
title.Font=Enum.Font.GothamBold
title.TextSize=20
title.TextColor3=Color3.fromRGB(255,255,255)

-- Tabs Bar
local tabBar=Instance.new("Frame",n)
tabBar.Position=UDim2.new(0,0,0,50)
tabBar.Size=UDim2.new(1,0,0,40)
tabBar.BackgroundColor3=Color3.fromRGB(30,30,45)
Instance.new("UICorner",tabBar).CornerRadius=UDim.new(0,8)

local function makeTab(txt,pos)
    local b=Instance.new("TextButton",tabBar)
    b.Size=UDim2.new(0.33,0,1,0)
    b.Position=UDim2.new(pos,0,0,0)
    b.Text=txt
    b.Font=Enum.Font.GothamBold
    b.TextSize=14
    b.TextColor3=Color3.fromRGB(255,255,255)
    b.BackgroundColor3=Color3.fromRGB(100,50,255)
    Instance.new("UICorner",b).CornerRadius=UDim.new(0,6)
    return b
end

local homeTab=makeTab("Home",0)
local creditsTab=makeTab("Credits",0.33)
local discordTab=makeTab("Discord",0.66)

-- Pages
local function makePage()
    local p=Instance.new("Frame",n)
    p.Position=UDim2.new(0,0,0,90)
    p.Size=UDim2.new(1,0,1,-90)
    p.BackgroundTransparency=1
    p.Visible=false
    return p
end

local homePage=makePage()
local creditsPage=makePage()
local discordPage=makePage()
homePage.Visible=true

-- TAB SWITCHING
local function show(pg)
    homePage.Visible=false
    creditsPage.Visible=false
    discordPage.Visible=false
    pg.Visible=true
end
homeTab.MouseButton1Click:Connect(function() show(homePage) end)
creditsTab.MouseButton1Click:Connect(function() show(creditsPage) end)
discordTab.MouseButton1Click:Connect(function() show(discordPage) end)

-- AUTO GREEN LOGIC (Original)
local autoGreen=false
local players=game:GetService("Players")
local uis=game:GetService("UserInputService")
local runService=game:GetService("RunService")

-- Auto Green Frame
local agFrame=Instance.new("Frame",homePage)
agFrame.BackgroundColor3=Color3.fromRGB(35,35,50)
agFrame.BorderSizePixel=0
agFrame.Position=UDim2.new(0.02,0,0.15,0)
agFrame.Size=UDim2.new(0.96,0,0.5,0)
Instance.new("UICorner",agFrame).CornerRadius=UDim.new(0,10)

local statusLabel=Instance.new("TextLabel",agFrame)
statusLabel.BackgroundTransparency=1
statusLabel.Position=UDim2.new(0,10,0,10)
statusLabel.Size=UDim2.new(1,-20,0,25)
statusLabel.Font=Enum.Font.Gotham
statusLabel.Text="Status: Waiting for ball..."
statusLabel.TextColor3=Color3.fromRGB(200,200,200)
statusLabel.TextSize=14
statusLabel.TextXAlignment=Enum.TextXAlignment.Left

local agBtn=Instance.new("TextButton",homePage)
agBtn.Text="üéØ Auto Green: OFF"
agBtn.Position=UDim2.new(0.02,0,0.02,0)
agBtn.Size=UDim2.new(0.96,0,0,50)
agBtn.BackgroundColor3=Color3.fromRGB(100,50,255)
agBtn.TextColor3=Color3.fromRGB(255,255,255)
agBtn.Font=Enum.Font.GothamBold
agBtn.TextSize=16
Instance.new("UICorner",agBtn).CornerRadius=UDim.new(0,10)

agBtn.MouseButton1Click:Connect(function()
    autoGreen=not autoGreen
    if autoGreen then
        agBtn.Text="üéØ Auto Green: ON"
        agFrame.Visible=true
    else
        agBtn.Text="üéØ Auto Green: OFF"
        agFrame.Visible=false
    end
end)

-- Key press detection for Auto Green
uis.InputBegan:Connect(function(input,processed)
    if processed then return end
    if input.KeyCode==Enum.KeyCode.E and autoGreen then
        local player=players.LocalPlayer
        local bar
        pcall(function() bar=player.PlayerGui.Visual.Shooting.Bar end)
        if bar then
            statusLabel.Text="Status: Shooting..."
            statusLabel.TextColor3=Color3.fromRGB(100,255,100)
            while uis:IsKeyDown(Enum.KeyCode.E) and autoGreen do
                pcall(function()
                    local baseTiming=0.045
                    local pingAdj=0
                    bar:TweenSize(UDim2.new(1,0,1,0),Enum.EasingDirection.Out,Enum.EasingStyle.Linear,baseTiming+pingAdj,true)
                    task.wait()
                    bar.Size=UDim2.new(1,0,1,0)
                end)
                task.wait()
            end
            statusLabel.Text="Status: Waiting for ball..."
            statusLabel.TextColor3=Color3.fromRGB(200,200,200)
        else
            statusLabel.Text="Status: No basketball!"
            statusLabel.TextColor3=Color3.fromRGB(255,100,100)
            task.wait(1)
            statusLabel.Text="Status: Waiting for ball..."
            statusLabel.TextColor3=Color3.fromRGB(200,200,200)
        end
    end
end)

